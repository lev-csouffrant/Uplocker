{
  "manifest_version": 2,
  "name": "securedrop-e2e",
  "version": "0.1",
    "description": "Utility plugin for encrypting files. Takes a key and file as input and outputs an encrypted file.",
    "permissions": [
        "*://*/*",
        "activeTab",
        "notifications",
        "webRequest"
    ],
  "background": {
      "scripts": ["src/openpgp.min.js",
                  "src/encrypt-file.js",
                  "src/background.js",
                  "src/pako_deflate.min.js"]
  },
  "browser_action": {},
  "content_scripts" : [
    {
        "matches" : ["*://*/*"],
        "js": ["src/content-script.js"]
    }
  ]
}
